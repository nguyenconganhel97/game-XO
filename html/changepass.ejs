    <div class="container-fluid container-fullw">
        <div class="row">
                
                
                <div class="panel-body">
                    <form  class="form-horizontal" method="POST" action="./changepassword" id="form-changepassword" >
                        <div class="form-group">
                            <label class="col-sm-1 control-label" >
                                Password
                            </label>
                            <div class="col-sm-5">
                                <input type="password" name="password" placeholder="Old Password" class="form-control ">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-1 control-label" >
                                New
                            </label>
                            <div class="col-sm-5">
                                <input type="password" placeholder="New Password" name="newpass" class="form-control" id="newpass" >
                            </div>
                        </div>
                        <div class="form-group">
                                <label class="col-sm-1 control-label" >
                                    Confirm
                                </label>
                                <div class="col-sm-5">
                                    <input type="password" placeholder="Confirm New Password" name="confirmnewpass"  class="form-control">
                                </div>
                            </div>
                        <div class="form-group margin-bottom-0">
                            <div class="col-sm-offset-5 col-sm-5">
                                <button class="btn btn-o btn-primary" type="submit" >
                                    Change
                                </button>
                            </div>
                        </div>
                    </form>
                </div>

        </div>
    </div>

    <!--end form-->
    <script>
        function myFunction() {

            if (document.getElementsByName('repass')[0].value == document.getElementsByName('repass')[1].value) {

                document.getElementById("myform").submit();
            } else {
                alert("Vui lòng nhập đúng pass confirm");
            }
        }
    </script>
