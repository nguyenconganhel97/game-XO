    <script>
        jQuery(document).ready(function () {
            $('#form-changepassword').validate({
                errorClass: 'jquery-validation-error',
                rules: {
                    password: {
                        minlength: 2,
                        required: true
                    },
                    newpass: {
                        minlength: 2,
                        required: true
                    },
                    confirmnewpass: {
                        minlength: 2,
                        required: true,
                        equalTo: '#newpass'
                    }
                },
                messages: {
                    password: {
                        minlength: "Không được ít hơn {0} ký tự",
                        required: "Không được bỏ trống"
                    },
                    newpass: {
                        minlength: "Không được ít hơn {0} ký tự",
                        required: "Không được bỏ trống"
                    },
                    confirmnewpass: {
                        minlength: "Không được ít hơn {0} ký tự",
                        required: "Không được bỏ trống",
                        equalTo: "Vui lòng nhập đúng password mới"
                    }
                }
            })
        });
    </script>
